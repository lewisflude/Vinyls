<p class="notice"><%= notice %></p>

<%= link_to 'Back to List', root_path, class: "button" %>

<ul class="single-vinyl-list">
  <li class="artist"><%= @vinyl.artist %></li>
  <li class="title"><%= @vinyl.title %></li>
  <li class="username"><%= link_to @vinyl.user.username, @vinyl.user %></li>
  <li class="thoughts"><%= @vinyl.thoughts %></li>
  <li><%= image_tag @vinyl.album_art.url %></li>
</ul>

<% if current_user %>
  <% if current_user.id == @vinyl.user_id %>
    <ul class="edit-links">
      <li><%= link_to "Edit", edit_vinyl_path, class: "button secondary" %></li>
      <li><%= link_to 'Destroy', { action: :destroy, id: @vinyl.id }, method: :delete, data: { confirm: 'Are you sure?' }, class: "button caution" %></li>
    </ul>
  <% end %>
<% end %>

