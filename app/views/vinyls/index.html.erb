<% @vinyls.each do |vinyl| %>
  <%= link_to vinyl, class: "vinyl-container" do %>
    <ul class="vinyl-list">
      <li class="artist"><%= vinyl.artist %></li>
      <li class="title"><%= vinyl.title %></li>
    </ul>
    <%= image_tag vinyl.album_art.url(:medium), class: "album-art" %>
  <% end %>
<% end %>

<% if current_user %>

  <%= link_to 'Add a Vinyl', new_vinyl_path, class: "add-vinyl" %>

<% else %>

  <%= link_to 'Sign up', sign_up_path, class: "add-vinyl" %>

<% end %>
