<!DOCTYPE html>
<html>
<head>
  <title>Vinyls</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <%= link_to "Vinyls", root_path, id: "logo" %>
    <nav>
      <% if signed_in? %>
        Logged in as <%= link_to current_user.username, user_path(current_user), class: "current-user" %>
        <%= link_to "Sign out", sign_out_path, method: "delete" %>
      <% else %>
        <%= link_to "Sign up", sign_up_path, class: "sign-up" %> or
        <%= link_to "Sign in", sign_in_path %>
      <% end %>

    </nav>
  </header>


  <div id="container">


    <%= yield %>

  </div>

